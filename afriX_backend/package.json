{
  "name": "afrix_backend",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "migrate": "node migrations/runner.js",
    "seed": "node seeders/runner.js",
    "lint": "eslint src/**/*.js",
    "logs": "tail -f logs/app.log",
    "db:drop": "npx sequelize-cli db:drop --config ./src/config/config.js --env development",
    "db:create": "npx sequelize-cli db:create --config ./src/config/config.js --env development"
  },
  "keywords": [
    "blockchain",
    "token-exchange",
    "p2p",
    "africa"
  ],
  "author": "AfriToken Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "description": "Peer-to-peer token exchange platform backend",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.914.0",
    "@aws-sdk/lib-storage": "^3.914.0",
    "@openzeppelin/contracts": "^5.4.0",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "ethers": "^6.15.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "firebase-admin": "^13.5.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^3.0.1",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.9",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "redis": "^5.8.3",
    "sequelize": "^6.37.7",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0",
    "twilio": "^5.10.3",
    "umzug": "^3.8.2",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@types/node": "^20.6.0",
    "eslint": "^9.38.0",
    "hardhat": "^2.26.5",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "sequelize-cli": "^6.6.3",
    "supertest": "^7.1.4"
  }
}
